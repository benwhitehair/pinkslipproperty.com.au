---
import About from '../components/about.astro';
import AllInclusiveOffer from '../components/all-inclusive-offer.astro';
import Contact from '../components/contact.astro';
import Hero from '../components/hero.astro';
import PinkSlipInfoCallout from '../components/pink-slip-info-callout.astro';
import PinkSlipPromoBanner from '../components/pink-slip-promo-banner.astro';
import Pricing from '../components/pricing.astro';
import SafetyFeaturesSection from '../components/safety-features-section.astro';
import Services from '../components/services/services.astro';
import Layout from '../layouts/layout.astro';
---

<Layout>
	<div class="relative grid">
		<Hero />
